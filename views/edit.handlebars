<div class="">
  <h3>Edit or Delete Post</h3>

  <form class="form edit-post">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <input class="form-input" type="text" id="post-title" name="post-title">
    </div>
    <div class="form-group">
      <label for="post-comment">Content:</label>
      <input class="form-input" type="text" id="post-comment" name="post-comment">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
    </div>
  </form>
  <div class="">
    <button type="button" class="btn btn-primary delete-post" data-id="{{id}}">Delete</button>
  </div>
</div>

<script src="/js/edit.js"></script>