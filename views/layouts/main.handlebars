  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <div class="d-flex justify-content"></div>
  <header class="text-center">
    <h1 class="">Tim's Software Tech Blog</h1>
    <nav class="d-flex justify-content-evenly">
      <a href="/" id="normal-txt">Home</a>
      <a href="/dashboard" id="normal-txt">Dashboard</a>
      {{#if logged_in}}
      <button id='logout' class='not-btn'>Logout</button>
      {{else}}
      <a href='/login' id="normal-txt">Login</a>
      {{/if}}
    </nav>
  </header>

  <main>
    <div class='post'>
      {{{body}}}
    </div>
  </main>
  {{#if logged_in}}
  <script src='/js/logout.js'></script>
  {{/if}}
  </div>
</body>

</html>